{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "target": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": false,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "types": ["node"],
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  },

  "include": [
    "src"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
