{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["ES2015"]
  },

  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
